@model PurchaseViewModel

@{
    ViewData["Title"] = "Thêm đơn nhập";
}

@section Scripts {
    <script src="/js/PurchaseItem.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<main>
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-fluid px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><i data-feather="list"></i></div>
                            Thêm phiếu nhập
                        </h1>
                    </div>
                    <div class="col-12 col-xl-auto mb-3">
                                            <div class="col-12 col-xl-auto mb-3">
                        <a class="btn btn-sm btn-light text-black" asp-action="Index">
                            <i class="me-1" data-feather="corner-up-left"></i>
                            Trở về
                        </a>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-fluid px-4">
        <div class="card">
            <div class="card-body">
                <form method="POST" asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mt-2">
                                <label asp-for="PurchaseOrder.CompanyId" class="control-label"></label>
                                <select asp-for="PurchaseOrder.CompanyId" asp-items="@Model.Company" class="form-select">
                                    <option disable selected>-- Chọn nhà cung cấp --</option>
                                </select>
                                <span asp-validation-for="PurchaseOrder.CompanyId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mt-2">
                                <label asp-for="PurchaseOrder.PurchaseTotal" class="control-label"></label>
                                <input asp-for="PurchaseOrder.PurchaseTotal" class="form-control bg-white" readonly/>
                                <span asp-validation-for="PurchaseOrder.PurchaseTotal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <label class="m-2">Chọn sách</label>
                        <div class="col-md-4">
                            <input id="book" name="book" list="bookdata" class="form-control" />
                            <datalist id="bookdata"></datalist>
                        </div>
                        <div class="col-md-3">
                            <input id="quantity" name="quantity" class="form-control" placeholder="Số lượng"/>
                        </div>
                        <div class="col-md-3">
                            <input id="price" name="price" class="form-control" placeholder="Giá nhập" />
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mt-2">
                                <button type="button" class="btn btn-secondary btn-sm" id="addBook">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <h5 class="mt-3">Chi tiết phiếu nhập</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Tên sách</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">Thành tiền</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody id="tablebody">
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary">Thêm đơn nhập hàng</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>