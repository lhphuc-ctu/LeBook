@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<section id="account-container">
    <div class="container">
        <div class="row">
            <div class="form-box col-md-12">
                <div class="form-box-content">
                    <div>
                        <ul class="button-box">
                            <li class="toggle-btn">
                                <a asp-page="./Login" class="text-decoration-none text-black">Đăng nhập</a>
                                <hr />
                            </li>
                            <li class="toggle-btn active">
                                <span>Đăng ký</span>
                                <hr />
                            </li>
                        </ul>
                    </div>
                    <div class="row mb-3">
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-box">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nhập địa chỉ email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.Role"></label>
                                    <select asp-for="Input.Role" asp-items="@Model.Input.Rolelist" class="form-control">
                                        <option disabled selected>-- Chọn vai trò --</option>
                                    </select>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-box">
                                    <label asp-for="Input.Name"></label>
                                    <input asp-for="Input.Name" class="form-control" placeholder="Nhập Họ và tên" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.DoB"></label>
                                    <input asp-for="Input.DoB" class="form-control" type="date"/>
                                    <span asp-validation-for="Input.DoB" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.PhoneNumber"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-box">
                                    <label asp-for="Input.Province"></label>
                                    <select asp-for="Input.Province" class="form-control">
                                        <option selected>-- Chọn Tỉnh/Thành phố --</option>
                                    </select>
                                    <span asp-validation-for="Input.Province" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.District"></label>
                                    <select asp-for="Input.District" class="form-control">
                                        <option selected>-- Chọn Quận/Huyện --</option>
                                    </select>
                                    <span asp-validation-for="Input.District" class="text-danger"></span>
                                </div>
                                <div class="input-box">
                                    <label asp-for="Input.Address"></label>
                                    <input asp-for="Input.Address" class="form-control"placeholder="Nhập địa chỉ" />
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-button">
                            <div class="btn-box">
                                <button id="registerSubmit" type="submit" class="btn-login">Đăng Ký</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let province = document.getElementById('Input_Province');
        let district = document.getElementById('Input_District');
    </script>
    <script src="~/js/location.js"></script>
}
