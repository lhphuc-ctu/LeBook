@model UserAddress

@{
    ViewData["Title"] = "Create";
}

<main>
    <div class="payment-container">
        <div class="container">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-auto">
                            <h5 class="page-header-title">Thêm địa chỉ</h5>
                        </div>
                        <div class="col-12 col-xl-auto">
                            <a class="btn btn-sm btn-outline-green text-primary" asp-action="Index">
                                Trở về
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Upsert">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mt-2">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="Province" class="control-label"></label>
                                    <select asp-for="Province" class="form-control">
                                        <option selected>-- Chọn Tỉnh/Thành phố --</option>
                                    </select>
                                    <span asp-validation-for="Province" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Thêm địa chỉ" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mt-2">
                                    <label asp-for="Contact" class="control-label"></label>
                                    <input asp-for="Contact" class="form-control" />
                                    <span asp-validation-for="Contact" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="District" class="control-label"></label>
                                    <select asp-for="District" class="form-control">
                                        <option selected>-- Chọn Quận/Huyện --</option>
                                    </select>
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mt-2">
                                    <label asp-for="Street" class="control-label"></label>
                                    <input asp-for="Street" class="form-control" />
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="Ward" class="control-label"></label>
                                    <select asp-for="Ward" class="form-control">
                                        <option selected>-- Chọn Xã/Phường --</option>
                                    </select>
                                    <span asp-validation-for="Ward" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let province = document.getElementById('Province');
        let district = document.getElementById('District');
        let ward = document.getElementById('Ward');
    </script>
    <script src="~/js/location.js"></script>
}

